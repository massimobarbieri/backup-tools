# Effettua il backup via samba
# Questo è il file di configurazione principale
if [ "$1" == "-u" ]
then
	USERCONF="/home/$2/.backup-tools.conf"
else
	USERCONF="~/.backup-tools.conf"
fi

if [ -f $USERCONF ]
then
	source $USERCONF
else
	cp /usr/share/backup-tools/backup-tools.conf ~/.backup-tools.conf
	if [ $? == 0 ]
		then
		echo "Please configure your $USERCONF"
	fi
	exit 1
fi

logger `hostname` esecuzione di bkp-samba -t $TAG 

if [ -d $SAMBAMOUNT ]
then
        echo La directory nella quale montare il server è presente...
        # Non fare niente
else
        echo Creo la directory nella quale montare il server
        mkdir $SAMBAMOUNT
fi

logger `hostname` monto $SAMBASHARE

# TODO: Aggiungere qualche controllo
smbmount $SAMBASHARE $SAMBAMOUNT -o credentials=$SAMBACREDENTIAL


if mount|grep $SAMBAMOUNT
then
	logger `hostname` inizio il backup di $SORGENTE su $SAMBASHARE

	#TODO: Aggiungere controllo su --exclude-from
	rsync -av $SORGENTE $SAMBAMOUNT
	RSYNCERR=$?
	logger `hostname` fine backup di $SORGENTE su $SAMBASHARE rsync $RSYNCERR

	umount $SAMBAMOUNT
fi
